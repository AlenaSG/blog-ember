<li class="list-group-item">

{{#link-to 'blog' blog.id}}<h3>{{blog.heading}}</h3>{{/link-to}} <br>{{blog.date}} <p>{{blog.tag}}</p>

  {{#if isImageShowing}}
    <p><img class="img-thumbnail" src={{blog.image}} alt={{blog.heading}} width=600px ></p>
    <button class="button btn-info" {{action 'imageHide'}}>Hide image</button>
  {{else}}
     <button class="button btn-info" {{action 'imageShow'}}>Show image</button>
  {{/if}}
</li>
