{{#if addNewBlog}}
  <h1>New Blog</h1>
    <div>
        <form>
          <div class="form-group">
            <label for="date">Date</label>
            {{input value=date id="date"}}
          </div>

          <div class="form-group">
            <label for="heading">Heading</label>
            {{input value=heading id="heading"}}
          </div>

          <div class="form-group">
            <label for="content">Content</label>
            {{input value=content id="content"}}
          </div>

          <div class="form-group">
            <label for="tag">Tag</label>
            {{input value=tag id="tag"}}
          </div>

          <div class="form-group">
            <label for="image">Image URL</label>
            {{input value=image id="image"}}
          </div>

          <button {{action 'saveBlog1'}}>Save</button>
        </form>
      </div>

{{else}}
  <button {{action 'blogFormShow'}}>New Post</button>
{{/if}}
