{{#if updateBlogForm}}
  <h4>Update {{blog.heading}}, {{blog.date}}</h4>
  <div>
      <form>
        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=blog.date}}
        </div>

        <div class="form-group">
          <label for="heading">Heading</label>
          {{input value=heading id="heading" placeholder=blog.heading}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=blog.content}}
        </div>

        <div class="form-group">
          <label for="tag">Tag</label>
          {{input value=tag id="tag" placeholder=blog.tag}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=blog.image}}
        </div>
      <button {{action 'update' blog}}>Save updated Info</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateBlogForm'}}>Update</button>
{{/if}}
